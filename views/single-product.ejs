<!DOCTYPE html>
<html lang="ch">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>商品单页</title>


    <!-- Bootstrap -->
    <link rel="stylesheet" href="/css/bootstrap.min.css">

    <!-- Font Awesome -->
    <link rel="stylesheet" href="/css/font-awesome.min.css">

    <!-- Custom CSS -->
    <link rel="stylesheet" href="/css/owl.carousel.css">
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="/css/responsive.css">

    <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
      <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
  </head>
  <body>

  <% include components/header %>
  <div class="mainmenu-area">
      <div class="container">
          <div class="row">

              <div class="navbar-collapse collapse">
                  <ul class="nav navbar-nav">
                      <li><a href="/home">主页</a></li>
                      <li><a href="/shop">商品页</a></li>
                      <li><a href="/cart">购物车</a></li>
                      <li><a href="/addcommodity">发布商品</a></li>
                  </ul>
              </div>
          </div>
      </div>
  </div> <!-- End mainmenu area -->

    <div class="product-big-title-area">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <div class="product-bit-title text-center">
                        <h2>商品详情</h2>
                    </div>
                </div>
            </div>
        </div>
    </div>


    <div class="single-product-area">
        <div class="zigzag-bottom"></div>
        <div class="container">
            <div class="row">
                <div class="col-md-4">
                    <div class="single-sidebar">
                        <h2 class="sidebar-title">宝贝搜索</h2>
                        <form action="">
                            <input type="text" placeholder="在这输入您想要的商品...">
                            <input type="submit" value="搜索">
                        </form>
                    </div>

                    <div class="single-sidebar">
                        <h2 class="sidebar-title">他的宝贝</h2>
                        <%for(var i=4;i<8;i++){ if(!Commoditys[i])continue;%>
                            <div class="thubmnail-recent">
                            <a href="/commodity/single/<%=Commoditys[i].cId%>"><img src="/images/<%=Commoditys[i].imgSrc%>" class="recent-thumb" alt="">
                            <h2><a href="/commodity/single/<%=Commoditys[i].cId%>"><%=Commoditys[i].cname%></a></h2></a>
                            <div class="product-sidebar-price">
                                <ins><%=Commoditys[i].price%>元</ins>
                            </div>
                            </div>
                        <%}%>

                    </div>

                    <div class="single-sidebar">
                        <h2 class="sidebar-title">最近成交</h2>
                        <ul>
                            <li><a href="">xiaoxiao购买了他出售的小米手机</a></li>
                            <li><a href="">15812739128购买了他出售的小米手环</a></li>
                            <li><a href="">weiwei购买了他出售的索尼相机</a></li>
                            <li><a href="">dongdong购买了他出售的篮球</a></li>
                            <li><a href="">qiqi购买了他出售的羽毛拍</a></li>
                        </ul>
                    </div>
                </div>

                <div class="col-md-8">
                    <div class="product-content-right">

                        <div class="row">
                            <div class="col-sm-6">
                                <div class="product-images">
                                    <div class="product-main-img">
                                        <img src="/images/<%=Commoditys[0].imgSrc%>" alt="">
                                    </div>

                                    <div class="product-gallery">
                                        <%for(var i in CImgs){ %>
                                        <img src="/images/<%=CImgs[i].imgSrc%>" alt="">
                                        <%}%>
                                    </div>
                                </div>
                            </div>

                            <div class="col-sm-6">
                                <div class="product-inner">
                                    <h2 class="product-name"><%=Commoditys[0].cname%></h2>
                                    <div class="product-inner-price">
                                        <ins>￥<%=Commoditys[0].price%></ins>
                                    </div>

                                    <form action="" class="cart">
                                        <div class="quantity">
                                            <input type="number" size="4" class="input-text qty text" title="Qty" value="1" name="quantity" min="1" step="1">
                                        </div>
                                        <button class="add_to_cart_button" onclick="addC(<%=Commoditys[0].cId%>)" type="button">加入购物车</button>
                                    </form>

                                    <div class="product-inner-category">
                                        <p>类型: <a href=""><%=Commoditys[0].type%></a>. </p>
                                    </div>

                                    <div role="tabpanel">
                                        <ul class="product-tab" role="tablist">
                                            <li role="presentation" class="active"><a href="#home" aria-controls="home" role="tab" data-toggle="tab">详情</a></li>
                                            <li role="presentation"><a href="#profile" aria-controls="profile" role="tab" data-toggle="tab">评论</a></li>
                                        </ul>
                                        <div class="tab-content">
                                            <div role="tabpanel" class="tab-pane fade in active" id="home">
                                                <h2>商品描述</h2>
                                                <p><%=Commoditys[0].cDescription%></p>
                                            </div>
                                            <div role="tabpanel" class="tab-pane fade" id="profile">
                                                <h2>Reviews</h2>
                                                <div class="submit-review">
                                                    <p><label for="name">Name</label> <input name="name" type="text"></p>
                                                    <p><label for="email">Email</label> <input name="email" type="email"></p>
                                                    <div class="rating-chooser">
                                                        <p>Your rating</p>

                                                        <div class="rating-wrap-post">
                                                            <i class="fa fa-star"></i>
                                                            <i class="fa fa-star"></i>
                                                            <i class="fa fa-star"></i>
                                                            <i class="fa fa-star"></i>
                                                            <i class="fa fa-star"></i>
                                                        </div>
                                                    </div>
                                                    <p><label for="review">Your review</label> <textarea name="review" id="" cols="30" rows="10"></textarea></p>
                                                    <p><input type="submit" value="Submit"></p>
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                </div>
                            </div>
                        </div>


                        <div class="related-products-wrapper">
                            <h2 class="related-products-title">相关商品</h2>
                            <div class="related-products-carousel">
                                <%for(var i=1;i<5;i++){ if(!Commoditys[i])continue;%>
                                    <div class="single-product">
                                    <div class="product-f-image">
                                        <img src="/images/<%=Commoditys[i].imgSrc%>" alt="">
                                        <div class="product-hover">
                                            <a onclick="addC(<%=Commoditys[i].cId%>)" class="add-to-cart-link"><i class="fa fa-shopping-cart"></i> 加入购物车</a>
                                            <a href="/commodity/single/<%=Commoditys[i].cId%>" class="view-details-link"><i class="fa fa-link"></i> 查看详情</a>
                                        </div>
                                    </div>

                                    <h2><%=Commoditys[i].cname%></h2>

                                    <div class="product-carousel-price">
                                        <ins><%=Commoditys[i].price%>元</ins>
                                    </div>
                                    </div>

                                <%}%>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="https://code.jquery.com/jquery.min.js"></script>
    <script type="text/javascript">

        function addC(id){

            $.ajax({
                url:'/cart/add/'+id,
                type:'post',
                data:'data',
                success:function(data,status){
                    alert('商品成功加入购物车!');
                    if(data=='new'){

                        var $num = $('.shopping-item  .product-count');
                        console.log($num.html());
                        $num.html(Number($num.html())+1);//局部刷新更新购物车商品数量
                    }
                },
                error:function(data,status){

                }
            });

        }
    </script>
    <script>
        $(function(){
            $('.product-gallery img').each(function(){
                $(this).hover(function(){

                    $('.product-main-img img').attr('src',$(this).attr('src'));
                    $(this).css('border','2px solid #f40');
                    $(this).siblings().css('border','2px solid #fff');
                })
            })
        })
    </script>
    <!-- Latest jQuery form server -->


    <!-- Bootstrap JS form CDN -->
    <script src="http://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js"></script>

    <!-- jQuery sticky menu -->
    <script src="/js/owl.carousel.min.js"></script>
    <script src="/js/jquery.sticky.js"></script>

    <!-- jQuery easing -->
    <script src="/js/jquery.easing.1.3.min.js"></script>

    <!-- Main Script -->
    <script src="/js/main.js"></script>
  </body>
</html>
